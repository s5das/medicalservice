{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build",
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["ES2020"],
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "./**/*.ts", "app.js", "pages/mine/mine.js", "pages/index/index.js", "pages/index/search-products/search-products.js", "utils/util.js", "pages/fix/fix.js", "pages/index/detail/detail.js"],
  "exclude": [
    "node_modules",
    "build/**/*"
  ]
}
