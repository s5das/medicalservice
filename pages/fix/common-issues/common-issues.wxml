<welcome showComment="{{ false }}" />

<view class="main">
  <view class="choose-issue">
    <view class="q">Q:</view>
    <view class="select">
      <issue-selector value="{{ value }}" options="{{ options }}" />
    </view>
  </view>
  <view class="content">
    <block wx:if="{{ currentType === '' }}">
      <view class="unchoose">
        <image lazy-load src="/images/issue-null.jpg" mode="aspectFill" />
      </view>
    </block>
    <block wx:else></block>
  </view>
</view>
